<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<menu>
    <a class="btn" href="/task">Create new Node</a>
    <button type="button">By finish Date</button>
    <button type="button">By create Date</button>
    <button type="button">By importance</button>
    {{#if dark_mode}}
        <a class="btn" href="/?darkmode=0">Style Switcher (lightmode)</a>
    {{else}}
        <a class="btn" href="/?darkmode=1">Style Switcher (darkmode)</a>
    {{/if}}

    <button type="button">Fertige verbergen</button>
</menu>
<div id="list">
    <!-- for each call other template  task_list  -->
    {{#each tasks}}
    <div class="task-entry">
        <div>
            {{_id}}
            {{date}}
            {{title}}
            {{prio}}
        </div>
        <div>
            <label><input type="checkbox" name="vehicle2" value="Car"> Finished</label>
            <textarea readonly>
                {{desc}}
            </textarea>
        </div>
        <button type="button">Edit</button>
    </div>
    {{/each}}
</div>